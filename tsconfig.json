{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "jest.config.ts",
    "jest.config.*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
